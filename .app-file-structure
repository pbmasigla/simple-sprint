│	└── assets 		// asset files such as images
|
├── server
│   ├── lib 		// server libraries
|	├── middleware	// helper functions for requests
|	├── routes		// function routes (does requests)
|	└── views		// ejs files
│
└── index.js		// main file to setup app/server
